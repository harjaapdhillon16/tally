{
	"name": "nexus",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"services/*"
	],
	"scripts": {
		"dev": "pnpm --filter web dev",
		"build": "pnpm -r build",
		"test": "pnpm -r test",
		"e2e": "pnpm --filter web exec playwright test",
		"lint": "eslint . --ext .ts,.tsx",
		"typecheck": "tsc -b",
		"migrate": "pnpm --filter @nexus/db run migrate",
		"seed": "pnpm --filter @nexus/db run seed"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"zod": "^4.1.1"
	}
}
