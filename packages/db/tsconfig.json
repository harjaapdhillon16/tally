{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,                
    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,              
    "declarationMap": false,
    "sourceMap": false,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "skipLibCheck": true,
    "strict": true,

    
    "types": ["node"],

    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
